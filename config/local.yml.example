# 本地开发环境配置覆盖示例
# 复制此文件为 local.yml 并根据需要修改
# local.yml 文件不会提交到 git 仓库

# 数据库配置覆盖
database:
  url: "postgres://postgres:mypassword@localhost:5432/chatroom_dev"
  max_connections: 10

# Redis 配置覆盖（如果使用本地Redis）
redis:
  url: "redis://localhost:6379"

# 服务器配置覆盖
server:
  port: 3000
  bcrypt_cost: 10  # 开发环境使用较低的cost以提高速度

# JWT配置覆盖（开发环境用更短的过期时间）
jwt:
  expiration_hours: 1